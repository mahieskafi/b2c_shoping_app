<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_page_background_color">

    <com.srp.eways.ui.view.input.InputElement
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/login_phone_number_input_margin_top"
        android:elevation="@dimen/login_input_elevation_size"

        custom:font="@font/iran_yekan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_input"
        android:layout_marginTop="@dimen/login_phone_number_alert_text_margin_top"
        android:gravity="right" />


    <com.srp.eways.ui.view.button.ButtonElement
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/login_button_margin_bottom"

        custom:button_font="@font/iran_yekan_light" />
</RelativeLayout>