<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_exit_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_cancel_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/filter_toolbar_cancel_all_title_text_color"
        android:background="@color/white"
        android:textSize="@dimen/filter_toolbar_cancel_all_text_size"
        app:fontFamily="@font/iran_yekan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/filter_toolbar_title_text_color"
        android:textSize="@dimen/filter_toolbar_title_text_size"
        app:fontFamily="@font/iran_yekan_bold" />
</merge>