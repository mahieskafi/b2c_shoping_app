<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/survey_icon_image"
        android:layout_width="@dimen/survey_icon_view_width"
        android:layout_height="@dimen/survey_icon_view_height"
        app:srcCompat="@drawable/survey_icon"
        android:layout_margin="@dimen/survey_icon_view_margin"/>

    <TextView
        android:id="@+id/survey_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_icon_view_text"
        android:fontFamily="@font/iran_yekan_medium"
        android:textColor="@color/survey_icon_view_text_color"
        android:textSize="@dimen/survey_icon_view_text_size"/>

</LinearLayout>