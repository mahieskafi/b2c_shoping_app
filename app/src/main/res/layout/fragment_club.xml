<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.srp.eways.ui.view.toolbar.WeiredToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/club_fragment_toolbar_height"
        android:elevation="@dimen/toolbar_elevation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/loyaltyscoreheaderview_height"
        android:background="@color/loyaltyscore_back_color"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/loyaltyscoreheaderview_padding_horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            app:srcCompat="@drawable/ic_loyality_view_star" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_loyalty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_toLeftOf="@+id/icon_star" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_loyalty_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_loyalty_title" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"

        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.srp.ewayspanel.ui.view.store.StoreFilterHeaderView
                android:id="@+id/filteritemvview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="top"
                android:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:visibility="visible"
                />
        </FrameLayout>

        <com.srp.eways.ui.view.EmptyView
            android:id="@+id/emptyview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/club_emptyview_margin_start"

            android:layout_marginTop="@dimen/club_emptyview_margin_top"
            android:layout_marginEnd="@dimen/club_emptyview_margin_start"
            android:visibility="gone"
            />

        <com.srp.eways.ui.view.LoadingStateView
            android:id="@+id/loadingstateview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/club_loadingstateview_marginstart"
            android:layout_marginEnd="@dimen/club_loadingstateview_marginend"
            android:gravity="center"
            android:visibility="gone"

            />

    </LinearLayout>

</LinearLayout>