<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sale_report_list_item_height"
    android:layout_marginLeft="@dimen/sale_report_list_item_sides_margin"
    android:layout_marginRight="@dimen/sale_report_list_item_sides_margin"
    android:orientation="horizontal"
    android:id="@+id/linear_buy_summary_item"
    android:weightSum="4">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textColor="@color/sale_report_list_item_text_color"
        android:textSize="@dimen/sale_report_list_item_text_size"
        app:fontFamily="@font/iran_yekan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textColor="@color/sale_report_list_item_text_color"
        android:textSize="@dimen/sale_report_list_item_text_size"
        app:fontFamily="@font/iran_yekan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:paddingRight="16dp"
        android:textColor="@color/sale_report_list_item_text_color"
        android:textSize="@dimen/sale_report_list_item_text_size"
        app:fontFamily="@font/iran_yekan" />

</LinearLayout>