<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/recycler_images">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/product_detail_image_slider_fragment_view_pager_padding" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/exit_button"
            android:layout_width="@dimen/product_detail_image_slider_fragment_exit_button_size"
            android:layout_height="@dimen/product_detail_image_slider_fragment_exit_button_size"
            android:layout_marginLeft="@dimen/product_detail_image_slider_fragment_exit_button_margin"
            android:layout_marginTop="@dimen/product_detail_image_slider_fragment_exit_button_margin_top"
            app:srcCompat="@drawable/ic_exit_product_detail_image" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/previous_arrow"
            android:layout_width="@dimen/product_detail_image_slider_fragment_arrow_button_width"
            android:layout_height="@dimen/product_detail_image_slider_fragment_arrow_button_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/product_detail_image_slider_fragment_arrow_button_margin"
            android:padding="@dimen/product_detail_image_slider_fragment_arrow_button_padding"
            app:srcCompat="@drawable/ic_arrow_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/next_arrow"
            android:layout_width="@dimen/product_detail_image_slider_fragment_arrow_button_width"
            android:layout_height="@dimen/product_detail_image_slider_fragment_arrow_button_height"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="@dimen/product_detail_image_slider_fragment_arrow_button_margin"
            android:padding="@dimen/product_detail_image_slider_fragment_arrow_button_padding"
            app:srcCompat="@drawable/ic_arrow_right" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true" />
</RelativeLayout>