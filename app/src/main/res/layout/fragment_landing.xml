<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.srp.ewayspanel.ui.view.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/placeholder_landing_shimmer" />

    </com.srp.ewayspanel.ui.view.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/landingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:visibility="visible">

        <com.srp.eways.ui.view.toolbar.WeiredToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/deposit_toolbar_height" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bannerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="9dp"
            custom:cardCornerRadius="16dp">

            <com.srp.eways.ui.banner.BannerListView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="126dp"

                android:layout_gravity="center">

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    custom:selected_drawable="@drawable/banner_indicator_selected"
                    custom:unselected_drawable="@drawable/banner_indicator_default" />
            </com.srp.eways.ui.banner.BannerListView>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mobile_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/landing_service_input_phonenumber_margin_sides"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/landing_service_input_phonenumber_margin_sides"
            android:gravity="right" />

        <com.srp.eways.ui.view.charge.PhoneAndOperatorsView
            android:id="@+id/input_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/landing_service_input_phonenumber_margin_sides"
            android:layout_marginRight="@dimen/landing_service_input_phonenumber_margin_sides" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/landing_service_list_margin_sides"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/landing_service_list_margin_sides"
            android:gravity="right" />

        <FrameLayout
            android:id="@+id/serviceListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/landing_service_list_margin_sides"
            android:layout_marginTop="@dimen/landing_service_list_margin_top"
            android:layout_marginRight="@dimen/landing_service_list_margin_sides"
            android:layout_marginBottom="@dimen/landing_service_list_margin_bottom"
            android:background="@drawable/landing_services_list_background"
            android:paddingTop="16dp"
            android:paddingBottom="-16dp"
            android:elevation="@dimen/landing_service_card_elevation">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <include
        android:id="@+id/charge_error_view"
        layout="@layout/landing_charge_error_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"/>

</FrameLayout>