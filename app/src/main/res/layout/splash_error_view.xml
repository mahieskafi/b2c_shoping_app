<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/splash_error_view_margin_sides"
    android:layout_marginRight="@dimen/splash_error_view_margin_sides"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/splash_error_view_title_margin_sides"
        android:layout_marginRight="@dimen/splash_error_view_title_margin_sides"
        android:layout_marginBottom="@dimen/splash_error_view_title_margin_bottom"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/splash_error_view_title_margin_sides"
        android:layout_marginRight="@dimen/splash_error_view_title_margin_sides"
        android:layout_marginBottom="@dimen/splash_error_view_description_margin_bottom"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">

        <com.srp.eways.ui.view.button.ButtonElement
            android:id="@+id/second_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonelement_default_height"
            android:layout_weight="0.4" />

        <com.srp.eways.ui.view.button.ButtonElement
            android:id="@+id/main_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonelement_default_height"
            android:layout_weight="0.6"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>