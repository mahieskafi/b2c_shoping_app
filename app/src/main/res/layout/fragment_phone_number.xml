<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/login_page_background_color">

    <View
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/verification_header_height" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/verification_logo_margin_top" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/input_number_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="right"
        tools:text="لطفا جهت اعتبار سنجی پروفایلو ارسال کد تایید وارد نمایید :"
        android:fontFamily="@font/iran_yekan"
        android:textColor="#2f3133"
        android:layout_below="@+id/login_header"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="63dp"
        />

    <com.srp.eways.ui.view.input.InputElement
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:layout_below="@+id/input_number_txt"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        custom:font="@font/iran_yekan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/phone_number_input"
        android:layout_marginTop="@dimen/login_phone_number_alert_text_margin_top"
        android:visibility="gone"
        android:gravity="right" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/phone_error_text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"

        android:weightSum="1"
        >

        <com.srp.eways.ui.view.button.ButtonElement
            android:id="@+id/lcancle_button"
            android:layout_width="112dp"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginHorizontal="10dp"
            custom:button_font="@font/iran_yekan_light"
            />

        <com.srp.eways.ui.view.button.ButtonElement
            android:id="@+id/login_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            custom:button_font="@font/iran_yekan_light"
            />

    </LinearLayout>

</RelativeLayout>