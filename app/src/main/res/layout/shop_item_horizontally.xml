<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">


    <View
        android:id="@+id/row_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/product_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="ماوس"
            android:gravity="right"
            android:maxLines="2"
            android:textAlignment="gravity"/>

        <com.srp.ewayspanel.ui.view.OffPriceTextView
            android:id="@+id/price_before_off"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:text="650000"/>

        <TextView
            android:id="@+id/price_after_off"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="left"
            android:text="550000"/>
        <TextView
            android:id="@+id/price_suffix"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/rial"
            android:gravity="right"
            android:fontFamily="@font/iran_yekan"
            android:textSize="@dimen/shop_item_price_suffix_text_size"
            android:textColor="@color/shop_item_price_suffix_text_color"/>

        <TextView
            android:id="@+id/off_value"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            />

        <View
            android:id="@+id/divider"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/shop_item_divider_color"/>

        <View
            android:id="@+id/click_helper"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


    <com.srp.ewayspanel.ui.view.CounterView2
        android:id="@+id/product_count"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/product_count_error"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:gravity="right"
        android:text="ناموجود!"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/delete_product"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"/>

</merge>