<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/information_summary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_cart_confirm_info_summary_margin"
                android:layout_marginRight="@dimen/shop_cart_confirm_info_summary_margin"
                android:layout_marginBottom="-10dp"
                android:gravity="right" />


            <androidx.cardview.widget.CardView
                android:id="@+id/information_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/shop_cart_confirm_info_summary_margin"
                android:background="@color/shop_cart_confirm_info_summary_background">

                <com.srp.ewayspanel.ui.view.shopcart.ReceiverDetailView
                    android:id="@+id/information_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <com.srp.ewayspanel.ui.shopcart.confirm.ShopCartPaymentMethodView
                android:id="@+id/payment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_marginHorizontal="11dp"/>

        </LinearLayout>

    </ScrollView>

    <com.srp.ewayspanel.ui.view.store.basket.OrderSummaryView
        android:id="@+id/order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>