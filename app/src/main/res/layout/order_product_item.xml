<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/order_id_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/order_id_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/order_id"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:lineSpacingExtra="7dp"
        android:text="دوربین حرفه ای Canon"/>

    <View
        android:id="@+id/price_image_divider"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/shop_cart_item_divider_color"/>


    <View
        android:id="@+id/count_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/count_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/count"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:text="1"/>

    <View
        android:id="@+id/unit_price_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/unit_price_suffix"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/unit_price"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="1020225523"/>
    <TextView
        android:id="@+id/unit_price_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>


    <View
        android:id="@+id/total_price_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/total_price_suffix"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/total_price"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="1020225523"/>
    <TextView
        android:id="@+id/total_price_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>


</merge>