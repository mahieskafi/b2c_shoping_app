<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:paddingEnd="@dimen/twolevelcategory_list_margin"
    android:paddingStart="@dimen/twolevelcategory_list_margin"
    android:layout_marginBottom="-30dp"
    android:clipChildren="false"
    android:clipToPadding="false">

        <com.srp.eways.ui.view.EmptyView
            android:id="@+id/emptyview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:layout_marginStart="@dimen/emptyview_margin_start_default"
            android:layout_marginTop="@dimen/emptyview_margin_top_default"
            android:layout_marginEnd="@dimen/emptyview_margin_end_default" />

        <com.srp.eways.ui.view.LoadingStateView
            android:id="@+id/loading_stateview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/store_loadingstateview_marginstart"
            android:layout_marginEnd="@dimen/store_loadingstateview_marginend"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categorylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="40dp"/>

</FrameLayout>