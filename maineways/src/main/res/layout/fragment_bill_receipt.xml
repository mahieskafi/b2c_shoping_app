<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@color/bill_pay_receipt_fragment_background_color">

    <com.srp.eways.ui.view.toolbar.WeiredToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bill_fragment_toolbar_height"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/toolbar_elevation" />

    <RelativeLayout
        android:id="@+id/multiple_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:elevation="1dp"
            android:background="@drawable/bill_receipt_multiple_background" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom|end"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF">

            <LinearLayout
                android:id="@+id/multiple_new_deposit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="34dp"
                android:layout_marginTop="36dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/multiple_new_deposit_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.08"
                    android:layout_marginRight="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/multiple_new_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1.92"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/multiple_new_deposit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_gravity="end"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"
                android:weightSum="2.875">


                <com.srp.eways.ui.view.button.ButtonElement
                    android:id="@+id/multiple_secondary_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonelement_default_height"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1.875"/>

                <com.srp.eways.ui.view.button.ButtonElement
                    android:id="@+id/multiple_main_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonelement_default_height"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/single_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_above="@+id/button_container">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:orientation="vertical">

                <com.srp.eways.ui.bill.receipt.ReceiptItemView
                    android:id="@+id/single_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill_receipt_single_background"
                    android:elevation="1dp"
                    android:layout_margin="16dp"/>

                <LinearLayout
                    android:id="@+id/single_new_deposit_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-8dp"
                    android:layout_marginBottom="16dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:elevation="1dp"
                    android:visibility="gone"
                    android:background="@drawable/bill_receipt_single_background"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/single_new_deposit_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.08"
                        android:layout_marginRight="4dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/single_new_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.92"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/single_new_deposit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="gravity"
                        android:layout_gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#f7f7f7"
            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2.875">


            <com.srp.eways.ui.view.button.ButtonElement
                android:id="@+id/single_secondary_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonelement_default_height"
                android:layout_marginRight="16dp"
                android:layout_weight="1.875"/>

            <com.srp.eways.ui.view.button.ButtonElement
                android:id="@+id/single_main_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonelement_default_height"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>