<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/values_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/count_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/key_billcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="key1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/value_description_billcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:visibility="gone"
                        tools:text="count" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/value_billcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="value1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/key_billprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="key2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/value_description_billprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:visibility="gone"
                        tools:text="price" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/value_billprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="value2" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.srp.eways.ui.view.button.ButtonElement
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bill_payment_summary_button_height" />

    </LinearLayout>
</merge>