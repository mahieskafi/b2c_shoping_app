<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:buttonTint="@color/bill_inquiry_detail_choise_radio_coor"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دوره"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="155255"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_inquiry_detail_choice_price_suffix"/>

</merge>