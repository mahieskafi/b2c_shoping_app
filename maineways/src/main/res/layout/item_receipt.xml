<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:weightSum="@integer/item_receipt_sum_weight">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_receipt_margin_right"
        android:layout_weight="@integer/item_receipt_data_weight"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/item_receipt_icon_width"
            android:layout_height="@dimen/item_receipt_icon_height"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/item_receipt_icon_margin"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/value_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:textColor="@color/item_receipt_value_description_text_color"
            android:textSize="@dimen/item_receipt_value_description_text_size"
            android:visibility="gone"
            android:layout_marginRight="@dimen/item_receipt_value_description_margin_right"
            app:fontFamily="@font/iran_yekan" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:textColor="@color/item_receipt_value_text_color"
            android:textSize="@dimen/item_receipt_value_text_size"
            android:maxLines="3"
            app:fontFamily="@font/iran_yekan"
            android:ellipsize="end"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="@dimen/item_receipt_title_width"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/item_receipt_title_margin_right"
        android:layout_weight="@integer/item_receipt_title_weight"
        android:gravity="right"
        android:textColor="@color/item_receipt_title_text_color"
        android:textSize="@dimen/item_receipt_title_text_size"
        app:fontFamily="@font/iran_yekan_light" />
</LinearLayout>