<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/confirm_transaction_standard_margin"
    card_view:cardCornerRadius="@dimen/confirm_transaction_corner_radius"
    card_view:cardElevation="@dimen/confirm_transaction_elevation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/confirm_transaction_standard_margin"
            android:fontFamily="@font/iran_yekan_medium"
            android:textColor="@color/confirm_transaction_title_text_color"
            android:textSize="@dimen/confirm_transaction_title_text_size" />

        <com.srp.eways.ui.view.receipt.ReceiptListView
            android:id="@+id/receipt_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/confirm_transaction_list_margin_top"
            android:layout_marginBottom="@dimen/confirm_transaction_standard_margin" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/confirm_transaction_divider_height"
            android:layout_below="@+id/receipt_list_view"
            android:layout_marginLeft="@dimen/confirm_transaction_standard_margin"
            android:layout_marginRight="@dimen/confirm_transaction_standard_margin"
            android:layout_marginBottom="@dimen/confirm_transaction_standard_margin"
            android:background="@color/confirm_transaction_divider_background" />

        <include
            android:id="@+id/item_paid_price"
            layout="@layout/item_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_paid_price"
            android:layout_marginLeft="@dimen/confirm_transaction_standard_margin"
            android:layout_marginTop="@dimen/confirm_transaction_button_container_margin_top"
            android:layout_marginRight="@dimen/confirm_transaction_standard_margin"
            android:layout_marginBottom="@dimen/confirm_transaction_button_container_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="@integer/confirm_transaction_container_weight">

            <com.srp.eways.ui.view.button.ButtonElement
                android:id="@+id/b_back"
                android:layout_width="@dimen/confirm_transaction_back_button_width"
                android:layout_height="@dimen/confirm_transaction_back_button_height"
                android:layout_marginRight="@dimen/confirm_transaction_back_button_margin_right"
                android:layout_weight="@integer/confirm_transaction_back_weight" />

            <com.srp.eways.ui.view.button.ButtonElement
                android:id="@+id/b_payment"
                android:layout_width="@dimen/confirm_transaction_confirm_button_width"
                android:layout_height="@dimen/confirm_transaction_confirm_button_height"
                android:layout_marginLeft="@dimen/confirm_transaction_confirm_button_margin_left"
                android:layout_weight="@integer/confirm_transaction_confirm_weight" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>