<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/receipt_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/receipt_shairing_background_e"
        >


        <View
            android:id="@+id/receipt_header_back"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="#66635f"
            android:layout_marginHorizontal="35dp"/>

        <ImageView
            android:id="@+id/eways_icon"
            android:layout_width="81dp"
            android:layout_height="62dp"
            android:layout_alignLeft="@+id/receipt_header_back"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_header_logo" />

        <TextView
            android:id="@+id/receipt_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:gravity="right"
            android:text="@string/receipt_for_shairing_title"
            android:layout_alignRight="@+id/receipt_header_back"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/eways_icon"
            android:layout_marginBottom="-4dp"/>

        <View
            android:id="@+id/receipt_header_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#fc7a1e"
            android:layout_below="@+id/receipt_header_back"
            android:layout_marginHorizontal="35dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_shairing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receipt_header_line"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/status_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="86dp" />

            <com.srp.eways.ui.bill.inquiry.views.KeyValuePairView
                android:id="@+id/detail_key_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="141dp"
                android:layout_marginHorizontal="74dp"
                android:layout_marginBottom="@dimen/bill_receipt_single_add_margin_top"/>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ic_eways_text"
            android:layout_below="@+id/card_view_shairing"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="50dp"
            android:layout_alignRight="@+id/receipt_header_back"
            android:background="@drawable/ic_eways_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan_bold"
            android:textSize="14dp"
            android:textColor="#000000"
            android:gravity="right"
            android:text="@string/receipt_for_shairing_footer"
            android:layout_alignRight="@id/ic_eways_text"
            android:layout_marginRight="50dp"
            android:layout_alignBottom="@+id/ic_eways_text"/>


    </RelativeLayout>

</LinearLayout>