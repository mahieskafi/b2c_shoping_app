<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/bill_item_checkbox_width"
        android:layout_height="@dimen/bill_item_checkbox_height"
        android:layout_alignParentRight="true"
        android:buttonTint="@color/bill_archive_checkbox_color"
        android:scaleX="0.9"
        android:scaleY="0.9" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/checkbox"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="#f3f3f3"
        app:cardCornerRadius="@dimen/bill_item_view_corner_radius"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.srp.eways.ui.bill.archive.billitemview.DetailBillItemView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bill_item_detail_height" />


            <RelativeLayout
                android:id="@+id/bill_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/bill_archive_item_text_margin_sides"
                android:paddingLeft="@dimen/bill_archive_item_text_margin_sides"
                android:paddingRight="@dimen/bill_archive_item_text_margin_sides">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inquiry_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inquiry_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bill_archive_item_value_margin_sides"
                    android:layout_marginRight="@dimen/bill_archive_item_value_margin_sides"
                    android:layout_toRightOf="@+id/inquiry_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bill_archive_item_value_margin_sides"
                    android:layout_marginRight="@dimen/bill_archive_item_value_margin_sides"
                    android:layout_toLeftOf="@+id/pay_id_title" />


            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/more_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/bill_archive_item_more_icon_margin"
                android:src="@drawable/bill_report_item_show_more_icon" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>