<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/root_view_bill_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/bill_payment_card_corner_radius"
                app:cardElevation="@dimen/bill_payment_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.srp.eways.ui.view.input.InputElement
                        android:id="@+id/input_bill_id"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginBottom="@dimen/bill_payment_input_bill_id_margin_bottom" />

                    <include
                        android:id="@+id/bill_error"
                        layout="@layout/view_bill_input_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <com.srp.eways.ui.view.input.InputElement
                        android:id="@+id/input_pay_id"
                        android:layout_width="match_parent"
                        android:layout_height="44dp" />

                    <include
                        android:id="@+id/price_error"
                        layout="@layout/view_bill_input_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bill_payment_button_margin_start"
                android:layout_marginTop="@dimen/bill_payment_button_margin_top"
                android:layout_marginEnd="@dimen/bill_payment_button_margin_start"
                android:layout_marginBottom="@dimen/bill_payment_button_margin_bottom"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.srp.eways.ui.view.button.ButtonElement
                    android:id="@+id/btn_sms_reader"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bill_payment_button_height"
                    android:layout_marginEnd="@dimen/bill_payment_button_margin_end"
                    android:layout_weight="1" />

                <com.srp.eways.ui.view.button.ButtonElement
                    android:id="@+id/btn_qr_reader"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bill_payment_button_height"
                    android:layout_marginStart="@dimen/bill_payment_button_margin_end"
                    android:layout_weight="1" />
            </LinearLayout>

            <com.srp.eways.ui.view.button.ButtonElement
                android:id="@+id/pay_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonelement_default_height"
                android:layout_marginStart="@dimen/bill_payment_button_margin_start"
                android:layout_marginEnd="@dimen/bill_payment_button_margin_start"
                android:layout_marginBottom="8dp" />

            <com.srp.eways.ui.view.bill.paymenttype.BillPaymentTypeView
                android:id="@+id/bill_payment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
