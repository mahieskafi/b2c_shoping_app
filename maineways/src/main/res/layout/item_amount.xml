<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_parent"
    android:gravity="right"
    android:layout_marginLeft="@dimen/item_amount_margin_left"
    android:layout_marginTop="@dimen/item_amount_standard_margin"
    android:layout_marginBottom="@dimen/item_amount_standard_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/iran_yekan_light"
        android:gravity="center_vertical"
        android:text="@string/item_amount_text"
        android:textColor="@color/item_amount_text_color"
        android:textSize="@dimen/item_amount_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_amount_button_margin_start"
        app:srcCompat="@drawable/ic_item_amount" />
</LinearLayout>