<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:clipChildren="false">

    <com.srp.eways.ui.view.toolbar.WeiredToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_us_toolbar_height"
        android:clipToPadding="false"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/about_us_standard_margin"
        android:layout_marginTop="@dimen/about_us_container_margin_top"
        android:layout_marginRight="@dimen/about_us_standard_margin"
        android:layout_marginBottom="@dimen/about_us_standard_margin"
        android:background="#FFF"
        card_view:cardCornerRadius="@dimen/about_us_container_corner_radius"
        card_view:cardElevation="@dimen/about_us_container_elevation">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/about_us_container_image_margin"
                    app:srcCompat="@drawable/ic_logo_eways" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/about_us_standard_margin"
                    android:fontFamily="@font/iran_yekan"
                    android:lineSpacingExtra="@dimen/about_us_line_spacing"
                    android:text="@string/about_us_description"
                    android:textColor="@color/black_light"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/about_us_text_size" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>