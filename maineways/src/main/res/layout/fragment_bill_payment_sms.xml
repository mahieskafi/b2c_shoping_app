<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.srp.eways.ui.view.toolbar.WeiredToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bill_fragment_toolbar_height"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="@dimen/toolbar_elevation" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/bill_payment_card_corner_radius"
                    app:cardElevation="@dimen/bill_payment_card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bill_payment_sms_layout_margin_bottom">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_paste"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_paste"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/bill_payment_sms_paste_text_margin_right"
                                android:layout_toStartOf="@+id/iv_paste" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_clear"
                                android:layout_width="@dimen/bill_payment_sms_clear_icon_size"
                                android:layout_height="@dimen/bill_payment_sms_clear_icon_size"
                                android:scaleType="fitCenter"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingStart="0dp"
                                android:paddingEnd="10dp"/>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_sms"
                            android:lineSpacingExtra="6sp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/bill_payment_sms_input_height" />

                        <include
                            android:id="@+id/v_error"
                            layout="@layout/view_bill_input_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.srp.eways.ui.view.button.ButtonElement
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bill_payment_sms_button_height" />
</LinearLayout>